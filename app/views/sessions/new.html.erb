<div class="form splash" id="login">

	<h1>Log In</h1>

	<!-- Flash message located in the sessions controller. only appears when user is redirected to this page on logout. tells user they are logged out. -->
	<% if flash[:logout] %>
	  <p class="logout"><%= flash[:logout] %></p>
	<% end %>


	<!-- flash message located in the sessions controller. error message that appears if user enters their login info wrong. -->
	<% if flash[:login_error] %>
		<p class="login_error"><%= flash[:login_error] %></p>
	<% end %>

	<% if flash[:new_board_error] %>
		<p class="new_board_error"><%= flash[:new_board_error] %></p>
	<% end %>


	<h4 id="signup">
		<%= link_to "Sign-Up", new_user_path %>
	<h4>
	<hr>
	<%= render 'form' %> 
		
</div>	