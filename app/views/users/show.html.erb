<div class="main_content user">
	<div class="bio">
		<h1><%= @user.username %>'s Profile</h1>
		<img src="<%= @user.avatar %>">
		<% if current_user == @user %>
			<%= link_to "Edit User", edit_user_path(@user) %>
		<% end %>
		<h2><%= @user.first_name %><br>
		<%= @age %> years old</h2>
		<p>Last Logged In: <%= @user.updated_at %></p>
		<div>
			<h2>scoreboard</h2>
			<p>HIGHSCORES</p>
		</div>

		<div>
			<h2>Saved Questions</h2>
			<ul>
				<% SavedQuestion.where("user_id = ?", current_user.id).each do |sq| %>
				  <li><%= sq.question %> -> <%= sq.answer %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>