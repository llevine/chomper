<div class="main_content user">
	
		<h1 style="margin-top: -5px;">Scorecard</h1>
		<p style="text-align: center; margin-top: -20px; color: grey;">Last Logged In: <%= @user.updated_at %></p>
		<img src="<%= @user.avatar %>">
		
<div class="bio" style="text-align: left;">
		<div>
			<h2>Scoreboard</h2>
			<hr>
			<ol id="highscores"></ol>
		</div>

		<div>
			<h2>Saved Questions</h2>
			<hr>
			<ul>
				<% SavedQuestion.where("user_id = ?", current_user.id).each do |sq| %>
				  <li><%= sq.question %> -> <%= sq.answer %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>